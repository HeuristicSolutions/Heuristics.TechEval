@model List<Heuristics.TechEval.Core.Models.Member>
@using Heuristics.TechEval.Web.Models
@{
    ViewBag.Title = "Members";
}

<h1>Member List</h1>

<button type="button" class="btn btn-primary pull-right" data-toggle="modal" data-target="#NewMemberModal">Add Member</button>
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var member in Model)
        {
            <tr>
                <th style="vertical-align: revert" scope="row">@member.Id</th>
                <td style="vertical-align: revert">@member.Name</td>
                <td style="vertical-align: revert">@member.Email</td>
                <td><button type="button" class="btn btn-link" id="editBtn-@member.Id" data-id="@member.Id" data-name="@member.Name" data-email="@member.Email" data-toggle="modal" data-target="#EditMemberModal">Edit</button></td>
            </tr>
        }
    </tbody>
</table>

<div class="modal fade" id="NewMemberModal">
    <div class="modal-dialog" role="document">
            @Html.Partial("_NewMember", new NewMember())
        </div>
</div>

<div class="modal fade" id="EditMemberModal">
    <div class="modal-dialog" role="document">
        <form id="EditMemberForm">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Edit Member</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="editFormId" name="Id" />
                    <div class="form-group">
                        <label for="Name">Member Name</label>
                        <input type="text" class="form-control" id="editFormName" name="Name" placeholder="John Smith" />
                    </div>
                    <div class="form-group">
                        <label for="Email">Email Address</label>
                        <input type="email" class="form-control" id="editFormEmail" name="Email" placeholder="you@awesome.com" />
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="submit" class="btn btn-primary" value="Save" />
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </form>
    </div>
</div>

<script type="text/javascript">

    $('#EditMemberModal').on('show.bs.modal', function (event) {
        var button = $(event.relatedTarget) // Button that triggered the modal
        var name = button.data('name') // Extract info from data-* attributes
        var email = button.data('email')
        var id = button.data('id')
        // Update the modal's content.
        var modal = $(this)
        modal.find('#editFormName').val(name)
        modal.find('#editFormEmail').val(email)
        modal.find('#editFormId').val(id)
    })

